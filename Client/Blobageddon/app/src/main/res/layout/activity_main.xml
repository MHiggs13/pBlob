<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTeamSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Team"
        android:onClick="btnTeamSelectionClicked"
        android:layout_below="@+id/instructionLbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instructionLbl"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Welcome to Blobageddon!\n Make sure you are connected.\n When all players are connected and there are an even number of players, press the team selection button to choose teams."
        android:editable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connectionLbl"
        android:layout_alignBottom="@+id/btnTeamSelection"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="You are connected!"
        android:editable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipLbl"
        android:text="IP: _._._._!"
        android:editable="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp" />

</RelativeLayout>
