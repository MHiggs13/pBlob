<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvwInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:inputType="none"
        android:textColor="#AA00FF"
        android:text="Please enter message to send to the SERVER"
        />

    <EditText
        android:id="@+id/etxMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvwInstruction"
        android:width="500dp"
        android:drawableBottom="#AA00FF"
        />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etxMsg"
        android:layout_alignRight="@id/etxMsg"
        android:text="Send"
        android:onClick="btnSendTextToServerClicked"
     />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connected?"
        android:id="@+id/connectedCkBx"
        android:layout_below="@+id/etxMsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconnect"
        android:id="@+id/reconnectBtn"
        android:layout_alignTop="@+id/connectedCkBx"
        android:layout_centerHorizontal="true"
        android:onClick="btnReconnectClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MoveControllerActivity"
        android:id="@+id/moveControllerBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnMoveControllerActivityClicked"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TestView"
        android:id="@+id/btnTestActivity"
        android:layout_above="@+id/moveControllerBtn"
        android:layout_centerHorizontal="true"
        android:onClick="btnTestViewClicked"/>

</RelativeLayout>
